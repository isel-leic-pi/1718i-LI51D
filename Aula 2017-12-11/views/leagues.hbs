<form action="/leagues" method="GET">


<div class="container">
    <div class="row col-12">
        <h1>Soccer Leagues</h1>
    </div>
    <div class="row">
        <div class="col-1">
            Left area
        </div>
        <div class="col-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" id="name">
                            <img id="img-sort-name" src=""/>
                            Name
                        </th>
                        <th scope="col" id="acronym">Acronym</th>
                    </tr>
                </thead>
                <tbody id="league-rows">
                    {{#each this.leagues}}
                    <tr>
                        <td>
                            <a href="/leagues/{{id}}">{{name}}</a>
                        </td>
                        <td>{{acronym}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="javascripts/leagues-sort.js">
</script>